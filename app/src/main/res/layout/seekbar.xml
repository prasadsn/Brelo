<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#4d4d4d"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_alignLeft="@+id/lock_pointer_layout"
        android:layout_alignEnd="@+id/lock_pointer_layout"
        android:scaleType="fitXY"
        android:src="@drawable/seekbar" />

    <LinearLayout
        android:id="@+id/lock_pointer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lock_pointer_3"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/knob_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/lock_pointer_2"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/knob_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/lock_pointer_1"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/knob_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/lock_pointer_0"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/knob_2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/lock_pointer_00"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_weight="1"
            android:src="@drawable/knob_2"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lock_pointer_layout"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/lock_3"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/lock_3" />

        <ImageView
            android:id="@+id/lock_2"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/lock_2" />

        <ImageView
            android:id="@+id/lock_1"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/lock_1" />

        <ImageView
            android:id="@+id/lock_0"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/lock_0" />

        <ImageView
            android:id="@+id/lock_00"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:src="@drawable/lock_00" />
    </LinearLayout>

</RelativeLayout>