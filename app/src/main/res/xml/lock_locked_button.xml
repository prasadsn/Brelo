<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- larger circle at the back -->
    <item android:height="254dp" android:width="254dp" android:gravity="center">
        <shape
            android:shape="oval">

            <solid
                android:color="#64b5f6"/>

            <!-- thicker outer boarder -->
            <stroke
                android:width="2dp"
                android:color="#64b5f6"/>
        </shape>
    </item>


    <!-- inner circle -->
    <item android:height="230dp" android:width="230dp" android:gravity="center">
        <shape
            android:shape="oval"  >
            <solid
                android:color="#fafafa"/>

            <stroke
                android:width="1dp"
                android:color="#fafafa"/>

        </shape>
    </item>
    <!-- inner circle -->
    <item android:height="200dp" android:width="200dp" android:gravity="center">
        <shape
            android:shape="oval"  >
            <solid
                android:color="#64b5f6"/>

            <stroke
                android:width="1dp"
                android:color="#64b5f6"/>

        </shape>
    </item>
</layer-list>
